{
    "name": "car-finder",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "dev-server": "nodemon -w src -x ts-node src/index.ts",
        "test:watch": "mocha --opts mocha.opts --watch",
        "start": "ts-node src/index.ts",
        "test": "mocha -r ts-node/register spec/**/*.ts",
        "debug": "tsc --watch",
        "test:coverage": "nyc  mocha -r ts-node/register spec/**/*.ts && nyc report --reporter=text-lcov | coveralls",
        "coverage": "nyc  mocha -r ts-node/register spec/**/*.ts"
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "extension": [
            ".ts",
            ".js",
            ".tsx"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text",
            "html"
        ],
        "sourceMap": true,
        "instrument": true,
        "all": true
    },
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.0.4",
        "@types/mocha": "^2.2.43",
        "chai": "^4.1.2",
        "coveralls": "^2.13.1",
        "mocha": "^3.5.3",
        "mocha-typescript": "^1.1.9",
        "nodemon": "^1.12.1",
        "nyc": "^11.2.1",
        "remap-istanbul": "^0.9.5",
        "source-map-support": "^0.4.18",
        "text-summary": "^2.0.4",
        "ts-node": "^3.3.0",
        "tslint": "^5.7.0",
        "tslint-config-prettier": "^1.5.0",
        "typescript": "^2.5.2"
    },
    "dependencies": {
        "@types/bluebird": "^3.5.12",
        "@types/koa": "^2.0.39",
        "@types/koa-bodyparser": "^3.0.25",
        "@types/koa-logger": "^2.0.2",
        "@types/koa-passport": "^2.0.4",
        "@types/koa-router": "^7.0.23",
        "@types/mongodb": "^2.2.11",
        "@types/mongoose": "^4.7.21",
        "@types/nodemailer": "^3.1.3",
        "@types/passport-local": "^1.0.31",
        "bluebird": "^3.5.0",
        "koa": "2.x",
        "koa-bodyparser": "^4.2.0",
        "koa-jwt": "^3.2.2",
        "koa-logger": "^3.0.1",
        "koa-passport": "^4.0.1",
        "koa-router": "^7.2.1",
        "mongoose": "^4.11.12",
        "nodemailer": "^4.1.2",
        "passport-local": "^1.0.0"
    }
}
