{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/src/index.ts",
      "outFiles": ["${workspaceRoot}/dist/src/*.js"],
      "protocol": "inspector",
      "sourceMaps": true
    },
    {
      "name": "Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": ["-r", "ts-node/register", "${workspaceRoot}/spec/**/*.ts"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
