{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "strict": true,
    "lib": ["es2015"],
    "experimentalDecorators": true,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "typeRoots": ["custom_typings", "node_modules/@types"]
  },
  "include": ["src/**/*", "spec/**/*.ts"],
  "exclude": ["node_modules"]
}
